<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrayerRequest.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">

            <ImageButton
                Source="prayerhands.png"
                HeightRequest="100"
                Clicked="OnImageButtonClicked" />

            <Entry 
                x:Name="PrayerRequestEntry" 
                Placeholder="What’s your prayer request?"
                HeightRequest="50"
                 />

            <Picker Title="Urgency" HorizontalOptions="Fill">
                <Picker.Items>
                    <x:String>Low</x:String>
                    <x:String>Medium</x:String>
                    <x:String>High</x:String>
                </Picker.Items>
            </Picker>

            <Button Text="Submit" Clicked="OnSubmitClicked"/>

            <Label Text="Expires after"
           FontSize="18"
           HorizontalOptions="Start"/>

            <!-- Slider View -->
            <Slider Minimum="0" Maximum="100" Value="50"
            HorizontalOptions="Fill"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
